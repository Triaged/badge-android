<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listViewStyle">@style/ListView</item>
    </style>

    <!-- list view -->
    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/padded_listview_row_bg</item>
    </style>

    <style name="Tabbed" parent="AppTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitleStyle</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:navigationMode">tabMode</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarTabStyle">@style/ActionBarBG</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
    </style>

    <style name="Badge" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowTitleStyle">@style/CustomWindowTitleStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarTabStyle">@style/ActionBarBG</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
    </style>

    <style name="BackTheme" parent="AppTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/BackThemeBG</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BackThemeBG" parent="android:Widget.ActionBar">
        <item name="android:background">@color/light_divider</item>
    </style>

    <style name="ActionBarBG" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/custom_tab_bg</item>
    </style>

    <style name="ActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CustomWindowTitleStyle">
        <item name="android:textAppearance">@style/CustomWindowTitleTextAppearance</item>
    </style>

    <style name="CustomWindowTitleTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <declare-styleable name="FlowLayout">
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="FlowLayout_Layout">
        <attr name="android:layout_gravity" />
    </declare-styleable>

</resources>