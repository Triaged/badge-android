<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

    <com.triaged.badge.app.views.TextViewWithFont
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/login_title"
        android:textColor="@color/accent_turquoise"
        />

    <com.triaged.badge.app.views.TextViewWithFont
        android:id="@+id/login_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="@string/login_info"
        android:textColor="@color/sub_text_gray"
        />

    <com.triaged.badge.app.views.EditTextWithFont
        android:id="@+id/login_email"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textColor="@color/main_text_black"
        android:textColorHint="@color/sub_text_gray"
        android:hint="Your Work Email Address"
        android:layout_below="@id/login_info"
        android:layout_marginTop="88dp"
        />

    <com.triaged.badge.app.views.EditTextWithFont
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textColor="@color/main_text_black"
        android:textColorHint="@color/sub_text_gray"
        android:hint="Your Work Email Address"
        android:layout_below="@id/login_email"
        />

    <com.triaged.badge.app.views.ButtonWithFont
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textColor="@color/white"
        android:text="Continue"
        android:gravity="center"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/login_email"
        android:layout_marginTop="35dp"
        />


</RelativeLayout>