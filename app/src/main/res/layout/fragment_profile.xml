<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.triaged.badge.ui.home.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        >
        <include layout="@layout/include_profile" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_orange"
        android:layout_alignParentBottom="true"
        >
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/lugnut"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/content_description_my_settings"
            android:background="@drawable/orange_button_bg"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</RelativeLayout>
